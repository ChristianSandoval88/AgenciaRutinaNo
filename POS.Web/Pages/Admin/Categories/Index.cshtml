@page
@model POS.Web.Pages.Admin.Categories.IndexModel
@{
    ViewData["Title"] = "Categorias";
    Layout = "~/Pages/Shared/AdminLTE/_Layout.cshtml";
}
<div class="card card-solid">
<div class="card-body">
    <div class="row">
        <div class="col-12">
            <a href="/admin/categories/upsert" class="btn btn-primary float-right"><i class="fas fa-plus-square"></i>&nbsp; Crear categoría</a><br /><br />
            <table id="CategoryTable" class="table table-striped table-valign-middle" style="width:100%">
                <thead>
                    <tr>
                        <th>Nombre de la categoría</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
</div>
@section Scripts {
    <script src="~/plugins/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/plugins/toastr/toastr.min.js"></script>
    <script src="~/js/categories.js"></script>
}