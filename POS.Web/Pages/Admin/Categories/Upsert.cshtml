@page
@model POS.Web.Pages.Admin.Categories.UpsertModel
@{
    ViewData["Title"] = Model.Category.Id == 0 ? "Crear" : "Editar";
    ViewData["Title"] += " Categoría";
    Layout = "~/Pages/Shared/AdminLTE/_Layout.cshtml";
}
<div class="card card-solid">
<form method="post" enctype="multipart/form-data">
    <input asp-for="Category.Id" type="hidden" />
    <div class="card-body">
        <div class="row">
            <div class="col-9">
                <div class="form-group">
                    <label asp-for="Category.Name"></label>
                    <input asp-for="Category.Name" class="form-control" />
                    <span asp-validation-for="Category.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category.DisplayOrder"></label>
                    <input asp-for="Category.DisplayOrder" class="form-control" value="1" />
                    <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        @if (Model.Category.Id == 0)
        {
            <button type="submit" class="btn btn-primary float-right"><i class="fas fa-save"></i>&nbsp;Crear</button>
        }
        else
        {
            <button type="submit" class="btn btn-primary float-right"><i class="fas fa-save"></i> &nbsp;Actualizar</button>
        }
        <a href="Index" class="btn btn-secondary float-right mx-2"><i class="fas fa-window-close"></i>&nbsp;Cancelar</a>
    </div>
</form>
</div>
