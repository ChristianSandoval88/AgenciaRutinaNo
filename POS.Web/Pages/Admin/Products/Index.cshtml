@page
@model POS.Web.Pages.Admin.Products.IndexModel
@{
    ViewData["Title"] = "Productos";
    Layout = "~/Pages/Shared/AdminLTE/_Layout.cshtml";
}
<div class="card card-solid">
<div class="card-body">
    <div class="row">
        <div class="col-12">
            <a href="/admin/products/upsert" class="btn btn-primary float-right mb-4"><i class="fas fa-plus-square"></i>&nbsp; Crear producto</a><br /><br />
            <table id="ProductsTable" class="table table-striped table-valign-middle" style="width:100%">
                <thead>
                    <tr>
                        <th>Orden</th>
                        <th>Nombre</th>
                        <th>Categoría</th>
                        <th>Precio de venta</th>
                        <th>¿Activo?</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
</div>
@section Scripts {
    <script src="~/plugins/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/plugins/toastr/toastr.min.js"></script>
    <script src="~/js/products.js"></script>
}
